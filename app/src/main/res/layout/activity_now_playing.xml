<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_header"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/padding_big">

        <TextView
            android:id="@+id/songs"
            style="@style/header_style"
            android:text="@string/songs" />

        <TextView
            android:id="@+id/artists"
            style="@style/header_style"
            android:text="@string/artists" />

        <TextView
            android:id="@+id/genres"
            style="@style/header_style"
            android:text="@string/genres" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/padding_big"
        android:layout_weight="1"
        android:src="@drawable/party_people" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_big"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_song_played"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_big"
            android:fontFamily="@font/artifika"
            android:freezesText="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@android:color/holo_purple"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Bumtzi Bumtzi" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/stop" />

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/play" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
